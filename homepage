      $loop = new WP_Query($args);

      // Check if there are courses to display
      if ($loop->have_posts()) :
        while ($loop->have_posts()) : $loop->the_post();
          // Fetch the image URL for the course (ACF field)
          $image = get_field('course_image');
          $image_url = $image ? esc_url($image['url']) : get_template_directory_uri() . '/img/default-course.jpg'; // Fallback image
          $course_title = esc_html(get_the_title());
          $course_permalink = esc_url(get_permalink());
